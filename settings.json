{
	//prettier

	"prettier.tabWidth": 4,
	"prettier.useTabs": true,

	//end.prettier

	"workbench.colorCustomizations": {
		"editor.background": "#1c202f19",
		"sideBar.background": "#1c202f19",
		//"editor.foreground": "#1c202f19",
		"editor.lineHighlightBackground": "#1c202f19",
		"tab.activeBackground": "#1c202f19",
		"tab.inactiveBackground": "#1c202f19",
		"editorOverviewRuler.commentForeground": "#1c202f19",
		"editorGutter.background": "#1c202f19",
		"titleBar.activeBackground": "#060d1434",
		"titleBar.border": "#060d1421",
		"titleBar.inactiveBackground": "#060d1421",
		"titleBar.activeForeground": "#060d1421",
		"notebookScrollbarSlider.background": "#060d1421",
		"editorGroupHeader.tabsBackground": "#060d1434",
		"editorCursor.background": "#24283b",
		"editorCursor.foreground": "#b1bcaf",
		"editor.wordHighlightTextBackground": "#3e466eaf",
		"terminal.background": "#0d0f168e"
	},
	"editor.tokenColorCustomizations": {
		"comments": "#9ba5b2"
	},
	"background.fullscreen": {
		"images": [
			"file:///Users/b.inetia/Documents/desktop_wpp/peakpxblur.jpg"
		], // url of your image
		// "image": ["https://pathtoimage.png"], // An array may be useful when set interval for carousel
		"opacity": 0.85, // 0.85 ~ 0.95 recommended
		"size": "cover", // also css, `cover` to self-adaption (recommended)，or `contain`、`200px 200px`
		"position": "center", // alias to `background-position`, default `center`
		"interval": 0 // seconds of interval for carousel, default `0` to disabled.
	},

	"auto-run-command.rules": [
		{
			"condition": "always",
			"command": "workbench.action.createTerminalEditor",
			"message": ""
		}
	],
	"vim.useSystemClipboard": true,
	"editor.cursorSurroundingLines": 8,
	"editor.scrollbar.verticalScrollbarSize": 6,
	"workbench.activityBar.visible": false,
	"editor.minimap.enabled": false,
	"breadcrumbs.enabled": false,
	"editor.suggest.insertMode": "replace",
	"terminal.integrated.fontFamily": "MesloLGS NF",
	"editor.linkedEditing": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"launch": {},
	"[json]": {},
	"workbench.statusBar.visible": false,
	"update.showReleaseNotes": false,
	"zenMode.hideLineNumbers": false,
	"editor.lineNumbers": "relative",

	"vim.leader": "<Space>",
	"vim.hlsearch": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		// NAVIGATION
		// switch b/w buffers
		{ "before": ["<S-h>"], "commands": [":bprevious"] },
		{ "before": ["<S-l>"], "commands": [":bnext"] },
		//open dir >> move key to
		{
			"before": ["leader", "e"],
			"commands": ["workbench.view.explorer"]
		},
		// close tab && buffer
		{
			"before": ["leader", "b", "d"],
			"commands": ["workbench.action.closeActiveEditor"]
		},
		// splits
		{ "before": ["leader", "v"], "commands": [":vsplit"] },

		// panes
		{
			"before": ["leader", "h"],
			"commands": ["workbench.action.focusLeftGroup"]
		},
		{
			"before": ["leader", "j"],
			"commands": ["workbench.action.focusBelowGroup"]
		},
		{
			"before": ["leader", "k"],
			"commands": ["workbench.action.focusAboveGroup"]
		},
		{
			"before": ["leader", "l"],
			"commands": ["workbench.action.focusRightGroup"]
		},
		// NICE TO HAVE
		{ "before": ["leader", "w"], "commands": [":w!"] },
		{ "before": ["leader", "q"], "commands": [":q!"] },
		{ "before": ["leader", "x"], "commands": [":x!"] },
		{
			"before": ["[", "d"],
			"commands": ["editor.action.marker.prev"]
		},
		{
			"before": ["]", "d"],
			"commands": ["editor.action.marker.next"]
		},
		{
			"before": ["<leader>", "c", "a"],
			"commands": ["editor.action.quickFix"]
		},
		{
			"before": ["leader", "f"],
			"commands": ["workbench.action.quickOpen"]
		},
		{
			"before": ["leader", "p"],
			"commands": ["editor.action.formatDocument"]
		},
		{
			"before": ["g", "h"],
			"commands": ["editor.action.showDefinitionPreviewHover"]
		}
	],
	"vim.normalModeKeyBindings": [
		{
			"before": ["g", "p", "d"],
			"commands": ["editor.action.peekDefinition"]
		},
		{
			"before": ["g", "h"],
			"commands": ["editor.action.showDefinitionPreviewHover"]
		},
		{
			"before": ["g", "i"],
			"commands": ["editor.action.goToImplementation"]
		},
		{
			"before": ["g", "p", "i"],
			"commands": ["editor.action.peekImplementation"]
		},
		{
			"before": ["g", "q"],
			"commands": ["editor.action.quickFix"]
		},
		{
			"before": ["g", "r"],
			"commands": ["editor.action.referenceSearch.trigger"]
		},
		{
			"before": ["g", "t"],
			"commands": ["editor.action.goToTypeDefinition"]
		},
		{
			"before": ["g", "p", "t"],
			"commands": ["editor.action.peekTypeDefinition"]
		}
	],
	"vim.visualModeKeyBindings": [
		// Stay in visual mode while indenting
		{ "before": ["<"], "commands": ["editor.action.outdentLines"] },
		{ "before": [">"], "commands": ["editor.action.indentLines"] },
		// Move selected lines while staying in visual mode
		{ "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
		{ "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
		// toggle comment selection
		{ "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
	],
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"workbench.startupEditor": "none",
	"workbench.colorTheme": "Catppuccin Frappé",
	"editor.fontSize": 16,
	"editor.fontFamily": "Fira Code",
	"editor.find.addExtraSpaceOnTop": false,
	"editor.fontLigatures": true,
	"editor.fontWeight": "normal",
	"editor.folding": false,
	"terminal.integrated.fontSize": 16,
	"window.commandCenter": false,
	"window.autoDetectHighContrast": false,
	"accessibility.dimUnfocused.enabled": true,
	"search.defaultViewMode": "tree",
	"scm.inputFontSize": 16,
	"scm.inputFontFamily": "Fira Code",
	"workbench.layoutControl.enabled": false,
	"workbench.layoutControl.type": "menu",
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.tabSizingFixedMaxWidth": 50,
	"workbench.editor.tabSizingFixedMinWidth": 38,
	"workbench.editor.wrapTabs": true,
	"zenMode.hideTabs": false,
	"editor.scrollbar.horizontalScrollbarSize": 6,
	"workbench.tips.enabled": false,
	"workbench.editor.enablePreview": false,
	"markdown.preview.lineHeight": 0,
	"terminal.integrated.lineHeight": 1.3,
	"workbench.iconTheme": "catppuccin-frappe",
	"accessibility.dimUnfocused.opacity": 1,
	"editor.cursorBlinking": "solid",
	"editor.cursorStyle": "block",
	"editor.cursorWidth": 1,
	"vim.cursorStylePerMode.insert": "line",
	"terminal.integrated.cursorStyle": "line",
	"editor.tabCompletion": "off",
	"editor.insertSpaces": false,
	"window.zoomLevel": -1
}
